@model OnSale.Common.Entities.Country

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Country</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_Country" />
            <div class="form-group">
                <button type="submit" class="btn btn-sm btn-primary"><span><i class="glyphicon glyphicon-ok"></i></span> Save</button>
                <a asp-action="Index" class="btn btn-sm btn-success"><i class="glyphicon glyphicon-remove"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
